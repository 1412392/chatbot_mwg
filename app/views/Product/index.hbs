                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                  
                    <p class="text-muted font-13 m-b-30">
                     
                    </p>
                  
                    <button style="float: right;" class="btn btn-primary" type="submit"><a href="/listproducts/additem" style="text-decoration: none;color:white">Thêm Sản Phẩm</a></button>
                 
                    <table id="datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>
                          <th>Image</th>
                          <th>Category</th>
                          <th>Description</th>
                          <th>Price</th>
                          <th>DateAdd</th>
                          <th>Status</th>
                          <th>Quantity</th>
                          <th>Action</th>
                        </tr>
                      </thead>


                      <tbody>
                        {{#each ListProduct}}
                        <tr>
                          <td>{{this.id}}</td>
                          <td>{{this.name}}</td>
                          <td><img src="{{this.urlimage}}" alt="HinhAnh" class="img-responsive"></td>
                          <td>{{this.namecategory}}</td>
                          <td>{{this.description}}</td>
                          <td>{{this.price}}</td>
                          <td>{{this.dateadd}}</td>
                          <td>{{this.namestatus}}</td>
                          <td>{{this.quantity}}</td>
                          <td>
                            <a href="/listproducts/detail-product/sp={{this.id}}" class="btn btn-success">Xem</a>
                            <a href="/listproducts/update/sp={{this.id}}" class="btn btn-warning">Sửa</a>
                          </td>
                        </tr>
                        {{/each}}
                       
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
